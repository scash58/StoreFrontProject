@* Ajax - Step 13 *@

@model StoreFrontProject.Data.EF.Category

@*
    Change the layout of this scaffolded partion view so that it appears as 1 row at the top of the table
    We need to update the BeginForm() to allow JS to handle the form submission
*@

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "CategoryCreateForm" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger btn btn-success" })

        <div class="form-group">
            <div class="row">
                <div class="col-md-3">
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Category" } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-5">
                    @Html.EditorFor(model => model.CategoryDesc, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                    @Html.ValidationMessageFor(model => model.CategoryDesc, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-2">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
