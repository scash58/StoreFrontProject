@model IEnumerable<StoreFrontProject.Data.EF.Order>

@{
    ViewBag.Title = "Orders";
}

<div class="main-banner" id="top">
    <h2 class="text-center">@ViewBag.Title</h2>

    <div class="productWrapper">
        <div class="col-md-12">
            <div id="mainContent">
                <div class="formContainer col-md-12">

                    <div class="col-md-12">

                        @if (User.IsInRole("Admin") || User.IsInRole("User"))
                        {
                            <p>
                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
                            </p>
                        }
                        <table class="table" style="font-size: 14px">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.OrderDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShippedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Freight)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipAddress)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipCity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipState)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipCountry)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ShipZip)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Customer.FullName)
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShippedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Freight)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipCity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipState)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipCountry)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShipZip)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Customer.FullName)
                                    </td>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <td class="text-right">
                                            @Html.ActionLink(" ", "Edit", new { id = item.OrderID }, new { @class = "btn btn-primary fas fa-pencil-alt" })
                                            @if (User.IsInRole("Admin"))
                                            {
                                                @Html.ActionLink(" ", "Details", new { id = item.OrderID }, new { @class = "btn btn-success fas fa-info" })
                                                @Html.ActionLink(" ", "Delete", new { id = item.OrderID }, new { @class = "btn btn-danger fa fa-trash" })
                                            }
                                        </td>
                                    }
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
