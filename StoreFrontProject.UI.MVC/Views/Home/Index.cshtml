                                            <li><a href="single-product.html"><i class="fa fa-eye"></i></a></li>
                                            <li><a href="single-product.html"><i class="fa fa-star"></i></a></li>
                                            <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                        </ul>
                                    </div>
                                    <img src="~/Content/assets/images/products/@cloths.ProductImage" alt="Product Image" title="@cloths.ProductImage">
                                </div>
                                <div class="down-content">
                                    <h4>@Html.DisplayFor(modelItem => cloths.ProductName)</h4>
                                    <span>@Html.DisplayFor(modelItem => cloths.UnitPrice)</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Clothing & Masks Area Ends ***** -->
<!-- ***** Paintball Accessories Area Starts ***** -->
