@model StoreFrontProject.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = Model.UserName + " Details";
}

<div class="main-banner" id="top">
    <div class="row">
        <div class="col-md-12">
            <div id="mainContent">
                <h2>@ViewBag.Title.</h2>
                <div class="formContainer col-md-4">
                    <div class="row">
                        <div class="col-md-8">

                            <div>
                                <h4>User</h4>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.UserName)
                                    </dd>
                                </dl>
                            </div>
                            <h4>List of roles for this user</h4>
                            @if (ViewBag.RoleNames.Count == 0)
                            {
                                <hr />
                                <p>No roles found for this user.</p>
                            }

                            <table class="table">

                                @foreach (var item in ViewBag.RoleNames)
                                {
                                    <tr>
                                        <td>
                                            @item
                                        </td>
                                    </tr>
                                }
                            </table>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

